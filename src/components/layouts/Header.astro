---
const pages: { name: string; slug: string }[] = [
  { name: "Home", slug: "/" },
  { name: "Blog", slug: "/blog/" },
  { name: "Contact", slug: "/contact/" },
];

const pathname = new URL(Astro.request.url).pathname;

    nirab
  </a>
  <ul class="flex justify-center lg:justify-start items-center mt-4 lg:mt-0">
    {
      pages.map((page) => (
        <li class="mx-3 hover:underline">
          <a
            class={`text-black hover:text-black ${
              pathname === page.slug && "underline"
            }`}
            href={page.slug}
          >
            {page.name}
          </a>
        </li>
      ))
    }

---
import Default from "@layouts/default.astro";
import { getFormattedDate } from "@utils/index";

export async function getStaticPaths() {
  const posts = await Astro.glob("./../../../posts/**/*.{md,mdx}");

  const paths = [] as any[];

  posts.forEach((post) => {
    paths.push({
      params: { path: post.frontmatter.path },
      props: { post: post },
    });
  });
  return paths;
}

const { post } = Astro.props;
const { Content } = post;
---

<Default title={post.frontmatter.title}>
  <div class="my-20 lg:max-w-screen-md mx-auto leading-6">
    <div class="mb-6">
      <h3 class="text-4xl font-bold text-gray-700 mb-6">
        {post.frontmatter.title}
      </h3>
      <div class="flex items-center text-sm justify-between">
        <div class="text-gray-500">
          {getFormattedDate(post.frontmatter.date)}
        </div>
        <div>
          {
            post.frontmatter.tags.map((tag: String) => (
              <a class="mr-3" href={`/tag/${tag}`}>
                #{tag}
              </a>
            ))
          }
        </div>
      </div>
      <div class="mx-auto prose prose-lg mt-6">
        <Content />
      </div>
      <div>
        <hr class="my-6" />
        <div class="flex items-start bg-gray-100 p-3 border rounded">
